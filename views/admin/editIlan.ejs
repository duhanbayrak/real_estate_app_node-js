                </ul>
            </div>

        </div>

    </nav>
    <form action action="/edit/<%= ilan._id %> " method="POST" enctype="multipart/form-data">
        <div class="container px-4 col-lg-9">

            <div class="row gx-5">
                <div class="col">
                    <div class="p-3">
                        <div class="form-group">
                            <label for="fiyat">Fiyat</label>
                            <input type="text" class="form-control" id="fiyat" placeholder="Fiyat" name="fiyat"
                                value="<%= ilan.fiyat %>">
                        </div>

                        <div class="form-group mt-2">
                            <label for="ilan_baslik">Başlık</label>
                            <input type="text" class="form-control" id="ilan_baslik" placeholder="İlan Başlık"
                                name="ilan_baslik" value="<%=ilan.ilan_baslik%>">
                        </div>


                        <div class="form-group mt-2">
                            <label for="il">İl</label>
                            <input type="text" class="form-control" id="il" placeholder="İl" name="il"
                                value="<%=ilan.il%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="ilce">İlçe</label>
                            <input type="text" class="form-control" id="ilce" placeholder="İlçe" name="ilce"
                                value="<%=ilan.ilce%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="ilan_no">İlan No</label>
                            <input type="text" class="form-control" id="ilan_no" placeholder="İlan No" name="ilan_no"
                                value="<%=ilan.ilan_no%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="ilan_tarihi">İlan Tarihi</label>
                            <input type="date" class="form-control" id="ilan_tarihi" name="ilan_tarihi" value="<%= ilan.ilan_tarihi.toISOString().replace("T00:00:00.000Z", "" )%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="alan_brut">Alan Brüt</label>
                            <input type="number" class="form-control" id="alan_brut" placeholder="Alan Brüt"
                                name="alan_brut" value="<%=ilan.alan_brut%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="alan_net">Alan Net</label>
                            <input type="number" class="form-control" id="alan_net" placeholder="Alan Net"
                                name="alan_net" value="<%=ilan.alan_net%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="oda_sayisi">Oda Sayısı</label>
                            <select class="form-control form-select" id="oda_sayisi" name="oda_sayisi">
                                <option value="1+1">1+1</option>
                                <option value="2+1">2+1</option>
                                <option value="3+1">3+1</option>
                                <option value="4+1">4+1</option>
                                <option value="5+1">5+1</option>
                            </select>
                        </div>
                        <div class="form-group mt-2">
                            <label for="bina_yasi">Bina Yaşı</label>
                            <input type="number" class="form-control" id="bina_yasi" placeholder="Bina Yaşı"
                                name="bina_yasi" value="<%=ilan.bina_yasi%>">
                        </div>

                    </div>
                </div>
                <div class="col">
                    <div class="p-3  ">
                        <div class="form-group">
                            <label for="bulundugu_kat">Bulunduğu Kat</label>
                            <input type="number" class="form-control" id="bulundugu_kat" placeholder="Bulunduğu Kat"
                                name="bulundugu_kat" value="<%=ilan.bulundugu_kat%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="kat_sayisi">Kat Sayısı</label>
                            <input type="number" class="form-control" id="kat_sayisi" placeholder="Kat Sayısı"
                                name="kat_sayisi" value="<%=ilan.kat_sayisi%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="isitma">Isıtma</label>
                            <input type="text" class="form-control" id="isitma" placeholder="Isıtma" name="isitma"
                                value="<%=ilan.isitma%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="banyo_sayisi">Banyo Sayısı</label>
                            <input type="number" class="form-control" id="banyo_sayisi" placeholder="Banyo Sayısı"
                                name="banyo_sayisi" value="<%=ilan.banyo_sayisi%>">
                        </div>
                        <div class="form-group mt-2">
                            <label for="balkon">Balkon</label>
                            <select class="form-control" id="balkon" name="balkon">
                                <option value="Var">Var</option>
                                <option value="Yok">Yok</option>

                            </select>
                        </div>
                        <div class="form-group mt-2">
                            <label for="balkon">Eşyalı</label>
                            <select class="form-control form-select" id="esyali" name="esyali">
                                <option value="Evet">Evet</option>
                                <option value="Hayır">Hayır</option>
                            </select>
                        </div>
                        <div class="form-group mt-2">
                            <label for="durum">Durum</label>
                            <select class="form-control form-select" id="durum" name="durum">
                                <option value="Kiralık">Kiralık</option>
                                <option value="Satılık">Satılık</option>
                            </select>
                        </div>
                        <div class="form-group mt-2">
                            <label for="image">Dosyaları Seç:</label>
                            <input type="file" class="form-control" id="image" name="image" accept="image/*" multiple required>
                        </div>
                        <div class="form-group mt-2">
                            <label for="ilan_aciklama">Açıklama</label>
                            <textarea class="form-control" id="ilan_aciklama" rows="4"
                                name="ilan_aciklama"><%= ilan.ilan_aciklama %></textarea><br>
                        </div>

                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">Ekle</button>
                </div>

            </div>
        </div>
    </form>













